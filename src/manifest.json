{
  "name": "To Be Named Micropub Extension",
  "author": "grant.codes",
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["onpage.bundle.js"]
    }
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "content_security_policy":
    "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["<all_urls>", "storage", "tabs", "bookmarks", "notifications"]
}
