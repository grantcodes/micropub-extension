{
  "name": "PostrChild",
  "author": "grant.codes",
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "persistent": true,
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["onpage.bundle.js"]
    }
  ],
  "icons": {
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "content_security_policy":
    "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs",
    "bookmarks",
    "notifications",
    "webRequest",
    "webRequestBlocking"
  ]
}
